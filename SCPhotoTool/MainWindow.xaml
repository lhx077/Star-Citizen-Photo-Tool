<Window x:Class="SCPhotoTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCPhotoTool"
        xmlns:resources="clr-namespace:SCPhotoTool.Resources"
        xmlns:views="clr-namespace:SCPhotoTool.Views"
        xmlns:viewmodels="clr-namespace:SCPhotoTool.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="星际公民摄影工具" Height="768" Width="1280" MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#162133"
        TextElement.Foreground="White"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <!-- 视图模型与视图的数据模板 -->
            <DataTemplate DataType="{x:Type viewmodels:CaptureViewModel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 工具栏 -->
                    <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16" UniformCornerRadius="8" Background="#1E2842">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Command="{Binding CaptureCommand}"
                                        Margin="0,0,8,0"
                                        ToolTip="截图"
                                        Background="#283758" 
                                        Foreground="#4C83FF"
                                        BorderBrush="#4C83FF"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Camera" Width="18" Height="18" Margin="0,0,8,0"/>
                                        <TextBlock Text="截图"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Command="{Binding SaveCommand}"
                                        Margin="0,0,8,0"
                                        ToolTip="保存"
                                        Background="#283758" 
                                        Foreground="#4C83FF"
                                        BorderBrush="#4C83FF"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" Margin="0,0,8,0"/>
                                        <TextBlock Text="保存"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Command="{Binding AddToLibraryCommand}"
                                        Margin="0,0,8,0"
                                        ToolTip="添加到库"
                                        Background="#283758" 
                                        Foreground="#4C83FF"
                                        BorderBrush="#4C83FF"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="LibraryPlus" Width="18" Height="18" Margin="0,0,8,0"/>
                                        <TextBlock Text="添加到库"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Command="{Binding ClearCommand}"
                                        ToolTip="清除"
                                        Background="#283758" 
                                        Foreground="#4C83FF"
                                        BorderBrush="#4C83FF"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Eraser" Width="18" Height="18" Margin="0,0,8,0"/>
                                        <TextBlock Text="清除"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center">
                                <TextBlock Text="{Binding StatusMessage}" 
                                       Foreground="White"/>
                                <TextBlock Text="{Binding GameVersionInfo}" 
                                       Foreground="#4C83FF"
                                       Visibility="{Binding IsGameConnected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Margin="0,4,0,0"
                                       FontSize="12"/>
                            </StackPanel>
                            
                            <ProgressBar Grid.Column="2" 
                                         IsIndeterminate="True" 
                                         Width="100" 
                                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Value="0"
                                         Foreground="#4C83FF"/>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 图像显示区域 -->
                    <Border Grid.Row="1" Background="#192132" Margin="0" CornerRadius="8">
                        <Grid>
                            <Image Source="{Binding PreviewImage}" Stretch="Uniform" Margin="16"/>
                            
                            <StackPanel Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}}"
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="ImageOutline" Width="64" Height="64" 
                                                        HorizontalAlignment="Center" 
                                                        Foreground="#4C83FF"/>
                                <TextBlock Text="点击上方的截图按钮开始" 
                                           Foreground="White" 
                                           FontSize="18" 
                                           Margin="0,16,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 设置区域 -->
                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <materialDesign:Card Padding="16" UniformCornerRadius="8" Background="#1E2842">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="截图设置" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,8"
                                               Foreground="White"/>
                                    
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="截图模式" 
                                                       Foreground="White" 
                                                       Margin="0,0,0,4"/>
                                            <ComboBox ItemsSource="{Binding Source={x:Static local:CaptureMode.GameWindow}, Converter={StaticResource EnumToItemsSource}}"
                                                      SelectedItem="{Binding CaptureMode}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="8,0,8,0">
                                            <CheckBox Content="窗口模式时自动移除标题栏" 
                                                      IsChecked="{Binding AutoRemoveTitleBar}" 
                                                      Margin="0,0,0,8"
                                                      Foreground="White"/>
                                                      
                                            <CheckBox Content="自动保存" 
                                                      IsChecked="{Binding AutoSave}" 
                                                      Margin="0,0,0,8"
                                                      Foreground="White"/>
                                                      
                                            <CheckBox Content="添加游戏信息水印" 
                                                      IsChecked="{Binding AddGameInfoWatermark}" 
                                                      Foreground="White"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                            <TextBlock Text="水印文本" 
                                                       Foreground="White" 
                                                       Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding WatermarkText}" 
                                                     materialDesign:HintAssist.Hint="支持{version}作为版本占位符"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                            Command="{Binding RefreshGameStatusCommand}"
                                            Margin="0,0,0,8"
                                            ToolTip="刷新游戏连接状态"
                                            Background="#283758" 
                                            Foreground="#4C83FF"
                                            BorderBrush="#4C83FF"
                                            materialDesign:ButtonAssist.CornerRadius="6">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Margin="0,0,8,0"/>
                                            <TextBlock Text="刷新游戏状态"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                            Command="{Binding OpenGameCommand}"
                                            ToolTip="连接游戏"
                                            Background="#283758" 
                                            Foreground="#4C83FF"
                                            BorderBrush="#4C83FF"
                                            materialDesign:ButtonAssist.CornerRadius="6">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Gamepad" Width="18" Height="18" Margin="0,0,8,0"/>
                                            <TextBlock Text="连接游戏"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                        
                        <!-- 最近截图 -->
                        <materialDesign:Card Padding="16" UniformCornerRadius="8" Background="#1E2842" Margin="0,16,0,0"
                                              Visibility="{Binding RecentScreenshots.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="最近截图" 
                                           FontWeight="Medium" 
                                           Margin="0,0,0,8"
                                           Foreground="White"/>
                                           
                                <ListBox ItemsSource="{Binding RecentScreenshots}" 
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                         Height="80">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding DataContext.OpenRecentCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    ToolTip="{Binding}"
                                                    Padding="4">
                                                <Image Source="{Binding Converter={StaticResource FilePathToImageConverter}}" 
                                                       Width="60" Height="60" Stretch="Uniform"/>
                                            </Button>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:PhotoEditorViewModel}">
                <views:PhotoEditorView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:LibraryViewModel}">
                <views:LibraryView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:EditorViewModel}">
                <TextBlock Text="编辑器视图尚未实现" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </DataTemplate>
        
        <Style x:Key="NavigationButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="48" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="16,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="16" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="UniformCornerRadius" Value="12" />
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2" />
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4" />
            <Setter Property="Background" Value="#182133" />
        </Style>
        
        <Style x:Key="WindowControlButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- 背景 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#151B2C" Offset="0"/>
                <GradientStop Color="#101827" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 自定义标题栏 -->
            <Grid Height="48" Background="#1A2237" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 标题和图标 -->
                <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Camera" Height="24" Width="24" Foreground="#4C83FF" VerticalAlignment="Center"/>
                    <TextBlock Text="星际公民摄影工具" FontSize="16" FontWeight="SemiBold" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
                
                <!-- 拖动区域 - 用于拖动窗口 -->
                <Border Grid.Column="1" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>
                
                <!-- 窗口控制按钮 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" Height="16" Width="16"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click">
                        <materialDesign:PackIcon x:Name="MaximizeIcon" Kind="WindowMaximize" Height="16" Width="16"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButton}" Click="CloseButton_Click" Foreground="#EB5545">
                        <materialDesign:PackIcon Kind="WindowClose" Height="16" Width="16"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 主内容区域 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 侧边导航面板 -->
                <Border Background="#192132" Margin="0" Padding="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 应用信息 -->
                        <materialDesign:Card Background="#1E2842" UniformCornerRadius="12" Margin="8,8,8,16" Padding="16">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="StarCircleOutline" Height="40" Width="40" Foreground="#4C83FF" HorizontalAlignment="Center"/>
                                <TextBlock Text="Star Citizen" FontSize="18" FontWeight="Bold" Foreground="#4C83FF" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock Text="摄影助手" FontSize="14" Foreground="#B0BEC5" HorizontalAlignment="Center" Margin="0,4,0,8"/>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- 导航菜单 -->
                        <StackPanel Grid.Row="1" Margin="8,8,8,0">
                            <TextBlock Text="主菜单" Foreground="#78909C" FontWeight="Medium" Margin="12,8,0,12"/>
                            
                            <Button Style="{StaticResource NavigationButton}" Command="{Binding NavigateToScreenshotCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="8" Background="#2D3E6C" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Camera" Width="20" Height="20" Foreground="#4C83FF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="截图工具" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource NavigationButton}" Command="{Binding NavigateToLibraryCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="8" Background="#2D3E6C" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ImageMultiple" Width="20" Height="20" Foreground="#4C83FF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="图片库" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource NavigationButton}" Command="{Binding NavigateToEditorCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="8" Background="#2D3E6C" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ImageEdit" Width="20" Height="20" Foreground="#4C83FF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="照片编辑" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource NavigationButton}" Command="{Binding NavigateToSettingsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="8" Background="#2D3E6C" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Cog" Width="20" Height="20" Foreground="#4C83FF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="设置" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource NavigationButton}" Command="{Binding ShowAboutWindowCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="8" Background="#2D3E6C" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Information" Width="20" Height="20" Foreground="#4C83FF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="关于" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- 游戏信息区域 -->
                        <materialDesign:Card Grid.Row="2" Background="#1E2842" UniformCornerRadius="12" Margin="8,16" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="游戏连接状态" FontWeight="Medium" Foreground="#78909C" Margin="0,0,0,8"/>
                                
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                                    <Ellipse Width="10" Height="10" Fill="{Binding GameConnectionStatus, Converter={StaticResource StatusToBrushConverter}}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding GameConnectionStatus}" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Button Grid.Row="2" Style="{StaticResource MaterialDesignFlatButton}" 
                                        Command="{Binding ConnectToGameCommand}" 
                                        Background="#283758" 
                                        Foreground="#4C83FF" 
                                        BorderThickness="0"
                                        materialDesign:ButtonAssist.CornerRadius="8"
                                        Height="36">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Connection" Width="18" Height="18" VerticalAlignment="Center"/>
                                        <TextBlock Text="连接游戏" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </Border>

                <!-- 内容区域 -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource ModernCardStyle}">
                    <ContentControl Margin="16" Content="{Binding CurrentViewModel}"/>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Window> 