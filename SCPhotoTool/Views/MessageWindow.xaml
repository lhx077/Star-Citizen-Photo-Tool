<Window x:Class="SCPhotoTool.Views.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCPhotoTool.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="提示" 
        Height="220" 
        Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Border CornerRadius="12" Background="#1E2842" Effect="{materialDesign:ShadowDepth5}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏 -->
            <Border Background="#192133" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 图标和标题 -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="16,0,0,0">
                        <materialDesign:PackIcon x:Name="TitleIcon" 
                                                 Kind="Information" 
                                                 Foreground="#4C83FF" 
                                                 Width="18" 
                                                 Height="18"
                                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="TitleText" 
                                   Text="提示信息" 
                                   Foreground="White" 
                                   FontWeight="Medium" 
                                   VerticalAlignment="Center" 
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <!-- 关闭按钮 -->
                    <Button Grid.Column="2" 
                            Click="CloseButton_Click" 
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Width="42" 
                            Height="42" 
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#FF5252">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- 内容区域 -->
            <Grid Grid.Row="1" Margin="24,16">
                <TextBlock x:Name="MessageText" 
                           Text="这是一条消息内容" 
                           Foreground="#CFD8DC" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </Grid>
            
            <!-- 按钮区域 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,20">
                <Button x:Name="OkButton" 
                        Content="确定" 
                        Click="OkButton_Click" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Background="#283758" 
                        Foreground="#4C83FF" 
                        Width="80" 
                        Height="36"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Margin="0,0,8,0"/>
                
                <Button x:Name="CancelButton" 
                        Content="取消" 
                        Click="CancelButton_Click" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Background="#283758" 
                        Foreground="#4C83FF" 
                        Width="80" 
                        Height="36"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 